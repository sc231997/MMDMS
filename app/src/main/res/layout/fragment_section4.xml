<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ml.alohomora.mmdms.Section4Fragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TextView
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Haemoglobin:"
            android:id="@+id/form4field1"
            android:layout_marginTop="71dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="WBC Count"
            android:id="@+id/fom4field2"
            android:layout_below="@+id/form4field1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:id="@+id/editForm4field1"
            android:layout_alignTop="@+id/form4field1"
            android:layout_toRightOf="@+id/form4field1"
            android:layout_toEndOf="@+id/form4field1" />

        <EditText
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:id="@+id/editForm4field2"
            android:layout_below="@+id/form4field1"
            android:layout_alignRight="@+id/editForm4field1"
            android:layout_alignEnd="@+id/editForm4field1" />

        <Button
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:text="Insert"
            android:id="@+id/Form4button1"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Haemoglobin:"
            android:id="@+id/textView2"
            android:layout_below="@+id/fom4field2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="48dp" />

        <TextView
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="WBC Count"
            android:id="@+id/textView3"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/fom4field2"
            android:layout_alignEnd="@+id/fom4field2" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/form4dispHB"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignRight="@+id/editForm4field2"
            android:layout_alignEnd="@+id/editForm4field2" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/form4dispWBC"
            android:layout_below="@+id/form4dispHB"
            android:layout_alignLeft="@+id/form4dispHB"
            android:layout_alignStart="@+id/form4dispHB" />

        <Button
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:text="Retrieve"
            android:id="@+id/form4Button2"
            android:layout_alignTop="@+id/Form4button1"
            android:layout_alignRight="@+id/form4dispWBC"
            android:layout_alignEnd="@+id/form4dispWBC" />

    </RelativeLayout>
</FrameLayout>
