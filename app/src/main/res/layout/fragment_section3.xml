<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ml.alohomora.mmdms.Section3Fragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|top">

        <RadioGroup
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/radioGroup2"
            android:layout_alignTop="@+id/Form3Field4"
            android:layout_alignLeft="@+id/radioGroup"
            android:layout_alignStart="@+id/radioGroup">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:id="@+id/cardProblemYes"
                android:checked="false"
                android:layout_toRightOf="@+id/Form3Field4"
                android:layout_alignTop="@+id/Form3Field4"
                android:textColor="#000000" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:id="@+id/cardProblemNo"
                android:layout_below="@+id/cardProblemYes"
                android:layout_alignLeft="@+id/cardProblemYes"
                android:layout_alignStart="@+id/cardProblemYes"
                android:checked="false" />
        </RadioGroup>

        <TextView
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:id="@+id/Form3Field4"
            android:text="Do you suffer from any Cardiac problems?"
            android:textSize="22sp"
            android:textColor="#040404"
            android:layout_below="@+id/radioGroup"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="28dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:text="Enter your Blood Group - "
            android:id="@+id/Form3Field1"
            android:layout_gravity="left|top"
            android:textSize="22sp"
            android:textColor="#020202"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="23dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do you suffer from any Respiratory problems?"
            android:id="@+id/Form3Field3"
            android:textSize="22sp"
            android:textColor="#030303"
            android:textColorHighlight="#e4bfbf"
            android:layout_below="@+id/Form3Field2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:layout_alignRight="@+id/Form3Field1"
            android:layout_alignEnd="@+id/Form3Field1" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the Blood Glucose Level(mg/dl)                -"
            android:id="@+id/Form3Field2"
            android:textSize="22sp"
            android:textColor="#050505"
            android:layout_below="@+id/Form3Field1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/Form3Field1"
            android:layout_alignEnd="@+id/Form3Field1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Form3glucoseLevel"
            android:layout_alignBottom="@+id/Form3Field2"
            android:layout_toRightOf="@+id/Form3Field2"
            android:layout_alignRight="@+id/spinner"
            android:layout_alignEnd="@+id/spinner" />

        <Button
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:text="Save"
            android:id="@+id/button"
            android:layout_marginBottom="54dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:text="Add Field"
            android:id="@+id/button3"
            android:layout_alignTop="@+id/button" />

        <RadioGroup
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/radioGroup"
            android:layout_alignTop="@+id/Form3Field3"
            android:layout_alignLeft="@+id/Form3glucoseLevel"
            android:layout_alignStart="@+id/Form3glucoseLevel">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:id="@+id/respProblemYes"
                android:checked="false"
                android:layout_alignTop="@+id/Form3Field3"
                android:layout_alignLeft="@+id/cardProblemNo"
                android:layout_alignStart="@+id/cardProblemNo" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:id="@+id/respProblemNo"
                android:checked="false"
                android:layout_below="@+id/respProblemYes"
                android:layout_alignLeft="@+id/respProblemYes"
                android:layout_alignStart="@+id/respProblemYes"
                />



        </RadioGroup>

        <Spinner
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:id="@+id/spinner"
            android:spinnerMode="dropdown"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/Form3Field1"
            android:layout_toEndOf="@+id/Form3Field1" />

    </RelativeLayout>

</FrameLayout>
